---
import Layout from "../../../layouts/Layout.astro";

import { SEO, banner, card_overlay, feature_selector } from "../../../data/services/companies.json";
import SectionBanner from "../../../components/services/SectionBanner.astro";
import BannerCard from "../../../components/services/BannerCard.astro";
import CompanyFeatures from "../../../components/services/company/CompanyFeatures.astro";
import BannerCardMobile from "../../../components/services/BannerCardMobile.astro";
import ServicesForm from "../../../components/services/ServicesForm.astro";

const services = feature_selector.map((feature) => feature.title);
---

<Layout title={SEO.title} description={SEO.description}>
    <main class="mt-[135px] min-h-screen relative">
        <SectionBanner backgroundImage={banner.image} title="Servicios" breadcrumb_top={true} class="lg:mb-24">
            <BannerCard data={card_overlay} class="absolute bottom-[-7rem] left-1/2 transform -translate-x-1/2 mx-auto z-20" />
        </SectionBanner>
        <BannerCardMobile data={card_overlay} />
        <CompanyFeatures feature_selector={feature_selector} />
        <ServicesForm services={services} />
        <div id="modal-feature-root"></div>
    </main>
</Layout>