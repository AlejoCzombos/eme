---
interface Props {
    membership : Membership;
}

interface Membership {
    title: string;
    items: Items[];
}
interface Items {
    image: Image;
    title?: string;
    href: string;
}

interface Image {
    src: string;
    alt: string;
}

const { membership } = Astro.props as Props;
---
<section class="flex flex-col xl:flex-row justify-between items-center gap-5 w-full px-10 py-12 lg:px-0 lg:py-12 max-w-7xl mx-auto">
    <h2 class="max-w-xs">{membership.title}</h2>
    <div class="flex flex-wrap xl:flex-nowrap max-w-4xl gap-8 justify-center">
        <a href={membership.items[0].href}>
            <img src={membership.items[0].image.src} alt={membership.items[0].image.alt} class="max-h-20 object-contain hover:scale-110 transition-transform duration-300 ease-in-out" />
        </a>
        <span class="hidden xl:block border border-primary-600"></span>
        <a href={membership.items[1].href}>
            <img src={membership.items[1].image.src} alt={membership.items[1].image.alt} class="max-h-20 object-contain hover:scale-110 transition-transform duration-300 ease-in-out" />
        </a>
        <span class="hidden xl:block border border-primary-600"></span>
        <a href={membership.items[2].href} class="flex justify-center items-center gap-3 hover:scale-110 transition-transform duration-300 ease-in-out">
            <img src={membership.items[2].image.src} alt={membership.items[2].image.alt} class="min-h-20" />
            <h3 class="font-bold text-primary-600 text-center">{membership.items[2].title.toLocaleUpperCase()}</h3>
        </a>
    </div>
</section>
