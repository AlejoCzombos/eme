---
import data from "../../data/home.json";
import PrimaryButton from "../UI/PrimaryButton.astro";

interface Props {
    plans : Plan[];
}

interface Plan {
    title: string;
    image: Image;
    href: string;
}

interface Image {
    src: string;
    alt: string;
}

const { plans } = Astro.props as Props;
---

<section class="grid md:grid-cols-4 grid-cols-1">
    {
        plans.map((plan) => (
            <a href={plan.href} class="plan relative h-36 xl:h-[22rem] w-full group overflow-hidden">
                <div class="absolute h-full flex flex-row w-full justify-between items-end p-10">
                    <h2 set:html={plan.title} class="text-2xl text-start font-bold text-white max-w-52 group-hover:scale-110 transition-transform ease-in-out duration-300 z-10"></h2>
                    <button class="bg-primary-500 text-white text-base lg:text-lg font-semibold px-4 py-2 rounded-xl group-hover:opacity-0 transition-opacity ease-in-out duration-500 z-10">Ver m√°s</button>
                </div>
                <img src={plan.image.src} alt={plan.image.alt} 
                class="absolute h-full w-full object-cover object-top top-0 left-0 -z-10 transition-all duration-500 ease-in-out group-hover:object-right scale-100 group-hover:scale-110 group-hover:translate-x-5"
                />
                <div id="gradient" class="absolute top-0 left-0 w-full h-full min-w-full min-h-full z-0"></div>
            </a>
        ))
    }
</section>

<style>
    #gradient {
        @apply bg-gradient-to-t from-[#004C4A] to-transparent to-75%
    }
