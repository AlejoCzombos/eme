---

const {class: className, data} = Astro.props;
---


<div class:list={[className, "max-w-6xl w-full pl-24 pr-36 py-8"]}>
  <div class="flex gap-12">
    <img class="size-32 z-10" src={data.icon.src} alt={data.icon.alt}>
    <div class="z-10">
      <h1 class="text-4xl text-white border-b-2 pb-3">{data.title}</h1>
      <p class="text-2xl text-white pt-4">
        {data.description}
      </p>
    </div>
    <img class="absolute top-0 left-0 w-full object-top object-fill h-full z-0" src="/test.svg" alt="Background Image">
  </div>
</div>