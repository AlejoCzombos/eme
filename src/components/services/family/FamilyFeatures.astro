---
import H2Title from "../../UI/H2Title.astro";
import Section from "../../UI/Section.astro";
import Feature from "../Feature.astro";

interface FeatureItem {
  icon: Icon;
  title: string;
  details: string;
  list?: string[];
}
interface Icon {
  src: string;
  alt: string;
}

const { features } = Astro.props as { features: FeatureItem[] };
---

<Section class="relative">
  <H2Title text="QuÃ© te ofrecemos" class="hidden lg:block" />
  <slot name="title" />
  <slot name="background" />
  <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
    {
        features.map((item) => (
            <Feature icon={item.icon} title={item.title} details={item.details} list={item.list} />
        ))
    }
  </div>
</Section>