---
interface Props {
    image: Image;
}
interface Image {
    src: string;
    alt: string;
}

const { image } = Astro.props as Props;
---

<section class="max-w-7xl mx-auto py-10 lg:py-10 relative flex items-center">
    <a href="https://play.google.com/store/apps/details?id=com.emesistemas.EmeEquipoMedicoDeEmergencia&pcampaignid=web_share">
        <img class="h-full w-full object-cover" src="/images/banner_publicidad.webp" alt={image.alt}>
    </a>
</section>

<style>
    .img {
        aspect-ratio: 16/9;
    }
    a {
        @apply transition-all ease-in-out duration-300;
    }
    a:hover {
        transform: scale(1.01);
        @apply shadow-xl;
    }
</style>