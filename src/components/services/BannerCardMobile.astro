---

interface Props {
    data: Data;
}
interface Data {
    title: string;
    description: string;
    icon: Icon;
}
interface Icon {
    src: string;
    alt: string;
}

const {data} = Astro.props as Props;
---
<div class="flex flex-col lg:hidden px-4 py-4">
    <div class="flex justify-center items-center gap-6 bg-gradient-to-b to-primary-600 to-80% from-secondary-900 rounded-3xl min-w-60 px-6 py-2 z-10">
        <img class="size-20 z-10" src={data.icon.src} alt={data.icon.alt}>
        <h1 class="text-xl text-white">{data.title}</h1>
    </div>
    <div class="flex items-center px-4 pt-3">
        <p class="text-base" set:html={data.description}></p>
    </div>
</div>