---
import H2Title from '../UI/H2Title.astro';

interface Props {
    enviroment_compromise: {
        title: string;
        description: string;
        comprimises: {
            title: string;
            icon: Image;
        }[];
    };
}

interface Image {
    src: string;
    alt: string;
}

const { enviroment_compromise } = Astro.props as Props;
const { title, comprimises, description } = enviroment_compromise;
---

<section class="px-10 py-12 lg:px-0 lg:py-16 max-w-6xl m-auto">
    <H2Title text={title} line={false} />
    <p class="ml-6 mb-12 font-semibold" set:html={description}></p>
    <div class="flex flex-wrap justify-center gap-10 lg:gap-10">
        {
            comprimises.map((compromise) => (
            <div class="flex flex-col items-center w-full max-w-32 lg:max-w-[8rem] gap-4 lg:gap-4 group">
                <img class="size-14 lg:size-20 group-hover:-translate-y-5 transition-transform duration-300 ease-in-out" src={compromise.icon.src} alt={compromise.icon.alt} />
                <span class="border-b border-primary-600 w-full"></span>
                <h3 class="text-lg text-center font-bold group-hover:scale-105 transition-transform duration-300 ease-in-out">{compromise.title}</h3>
            </div>
            ))
        }
    </div>
</section>