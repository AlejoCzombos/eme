---
import H2Title from "../UI/H2Title.astro";
import Section from "../UI/Section.astro";
import ThreeColumnsGrid from "../UI/ThreeColumnsGrid.astro";
import PrimatyButton from "../UI/PrimaryButton.astro";

const { policonsultorios } = Astro.props;

const { specialties, title } = policonsultorios;

const id = policonsultorios.id + "_content";
---

<Section id={id} class="content hidden animate-fade-down animate-delay-300 animate-duration-500 animate-ease-in-out" >
    <ThreeColumnsGrid gap="gap-y-8 gap-x-6" grid="grid-cols-2 lg:grid-cols-3" class="flex justify-center items-center max-w-6xl m-auto py-4">
        {
            // specialties.map((specialty) => (
            //     <div class="flex flex-col items-center justify-center w-full gap-2 lg:gap-4 group">
            //         <img class="size-20 lg:size-28 group-hover:-translate-y-5 transition-transform duration-300 ease-in-out" src={specialty.image.src} alt={specialty.image.alt} />
            //         <h3 class="text-center font-bold group-hover:scale-110 transition-transform duration-300 ease-in-out">{specialty.name}</h3>
            //     </div>
            // ))
            specialties.map((specialty) => (
                <div class="flex flex-row items-center w-full gap-2 lg:gap-4 group max-w-48 m-auto hover:scale-110 transition-transform duration-200 ease-in-out cursor-default">
                    <img class="size-6" src="/icons/benefits/especialidad.svg" alt="Icono de especialidad" />
                    <h3 class="text-base">{specialty.name}</h3>
                </div>
            ))
        }
    </ThreeColumnsGrid>
    <div class="flex flex-col justify-center items-center py-8 lg:py-16">
        <h3>Consultar por otras especialidades y servicios disponibles en las diferentes sucursales:</h3>
        <PrimatyButton text="Conocé más" href="/policonsultorios" class="mt-8" />
    </div>
</Section>