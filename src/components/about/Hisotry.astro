---
import H2Title from '../UI/H2Title.astro';
import Section from '../UI/Section.astro';

interface Props {
    history: {
        title: string;
        resume: string;
        description: string;
        image: Image;
    }
}
interface Image {
    src: string;
    alt: string;
}

const { history } = Astro.props as Props;
const { description, image, resume, title } = history
---

<Section>
    <H2Title text={title} />
    <div class="flex flex-col xl:flex-row gap-6 xl:gap-10 lg:in-h-[25rem] animate-fade-up animate-ease-in-out">
        <img class="rounded-2xl w-full h-full max-h-72 lg:max-h-full lg:min-h-[25rem] max-w-3xl m-auto xl:w-[28%] object-cover lg:object-fill" src={image.src} alt={image.alt}>
        <header class="flex flex-col justify-center xl:w-[75%] gap-4">
            <h3 class="font-bold text-lg lg:text-2xl" >{resume}</h3>
            <p set:html={description}></p>
        </header>
    </div>
</Section>
