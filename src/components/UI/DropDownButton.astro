---
const {phones, text, class: className, ...props} = Astro.props;
---

<details class="relative group">
  <summary
    class="py-2 px-4 md:px-6 text-center text-white font-semibold bg-primary-600 cursor-pointer hover:scale-105 transition-transform duration-300 ease-in-out flex items-center justify-between list-none"
  >
    <span>EMERGENCIA</span>
    <img
      src="/icons/acordeon-arrow-white.svg"
      alt="Flecha desplegable"
      class="size-5 transition-transform duration-300 ease-in-out group-open:rotate-180"
    />
  </summary>
  <ul
    class="absolute left-0 w-full bg-white border border-gray-200 shadow-lg overflow-hidden z-10 hidden group-open:block"
  >
    {
        phones.map((phone) => (
        <li>
            <a
            href={`tel:${phone}`}
            class="block py-2 px-4 hover:bg-gray-100 text-gray-800"
            >
              <span class="text-primary-600 font-bold">{phone.text}</span>
              {phone.number}
            </a>
        </li>
        ))
    }
  </ul>
</details>

